{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "declaration": false,
    "declarationMap": false,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./src/*"],
      "@masters/types": ["../../packages/types/src"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite.config.ts",
    "../../packages/types/src/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
